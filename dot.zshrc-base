export PATH=".:$HOME/bin:$PATH"
export PS1='%n@%m:%~ %# '

alias v="vim"
alias l="ls -l"
alias ls="ls -aF"
alias la='ls -a'
alias lo='libreoffice'
alias t=todo.sh
alias recur=". ~/.current"
alias realias=". $0"


# Git prompt
source ~/.git-prompt.sh

# * or + after branch
GIT_PS1_SHOWDIRTYSTATE=y
# $ after branch
GIT_PS1_SHOWSTASHSTATE=y
# % after branch
GIT_PS1_SHOWUNTRACKEDFILES=y
# 
GIT_PS1_SHOWUPSTREAM=verbose

export PS1='%n@%m:%~$(__git_ps1 " (%s)") %# '
