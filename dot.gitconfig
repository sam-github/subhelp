[user]
	email = vieuxtech@gmail.com
	name = Sam Roberts
[clean]
	requireForce = false
[alias]
	cl = clean -x
	f = fetch --prune
	st = status
	ci = commit
	fetch = fetch --prune
	br = branch
	b = branch -av
	co = checkout
	df = diff --word-diff
	lg = log --stat --decorate
	pick = cherry-pick
	tg = show-ref --tags
	tree = log --graph --oneline --decorate --simplify-by-decoration --branches
	remotes = remote -v show
[core]
	excludesfile = ~/.gitignore
	# os x/brew hack
	editor = /usr/local/bin/vim
[help]
	autocorrect = -1
[push]
	default = tracking
[color]
	ui = true
